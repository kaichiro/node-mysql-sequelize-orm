<% include ../partials/header.ejs %>

<h1>Editar pessoa (<%= pessoa.id %> - <%= pessoa.nome%>)</h1>

<p><a href="/pessoas">Voltar para a lista de pessoas</a></p>

<form method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input tupe="text" class="form-control" id="nome" name="nome" placeholder="Nome" value="<%= pessoa.nome %>">
    </div>

    <div class="form-group">
        <label for="nascimento">Nascimento</label>
        <input tupe="text" class="form-control" id="nascimento" name="nascimento" placeholder="Nascimento" value="<%= pessoa.nascimento %>">
    </div>

    <div class="form-group">
        <label for="cargo">Cargo</label>
        <input tupe="text" class="form-control" id="cargo" name="cargo" placeholder="Cargo" value="<%= pessoa.cargo %>">
    </div>

    <button type="submit" class="btn btn-default">Salvar</button>
</form>

<% include ../partials/footer.ejs %>